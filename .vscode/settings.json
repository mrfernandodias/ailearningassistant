{
  // =============================================================
  // VS CODE WORKSPACE SETTINGS
  // Modo padr√£o: Equil√≠brio para ESTUDO (clareza > velocidade)
  // Abaixo h√° um bloco comentado "FOCUS MODE" para alta performance.
  // Para alternar: copie as linhas do bloco e substitua as atuais.
  // =============================================================

  "editor.rulers": [100],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Fechamento autom√°tico de pares
  "editor.autoClosingBrackets": "always", // {}, [], ()
  "editor.autoClosingQuotes": "always", // ' " `
  "editor.autoSurround": "languageDefined", // envolve sele√ß√£o ao digitar () [] {}
  "editor.formatOnType": true,

  // Tags HTML/JSX
  "html.autoClosingTags": true,

  // Emmet: expand em Tab (opcional para rapidez em JSX)
  "emmet.triggerExpansionOnTab": true,

  // =============================================================
  // STUDY MODE (ativo agora):
  // - Sugest√µes moderadas, ajuda de par√¢metros
  // - Auto-import normal
  // - Inline suggestions desativadas para evitar distra√ß√£o
  // =============================================================
  "editor.inlineSuggest.enabled": false,
  "editor.parameterHints.enabled": true,
  "editor.suggest.preview": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "css.lint.unknownAtRules": "ignore", // ignora @apply, @tailwind, @theme avisos

  // üé® TAILWIND CSS v4 - Autocomplete avan√ßado
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "editor.quickSuggestions": {
    "strings": true // Ativa autocomplete Tailwind dentro de strings
  }

  // =============================================================
  // FOCUS MODE (descomente para ativar performance m√°xima):
  // -------------------------------------------------------------
  // "editor.inlineSuggest.enabled": true,
  // "editor.parameterHints.enabled": false,
  // "editor.quickSuggestions": { "other": false, "comments": false, "strings": false },
  // "editor.suggestOnTriggerCharacters": false, // s√≥ Ctrl+Space
  // "editor.suggest.preview": true,
  // "editor.acceptSuggestionOnEnter": "smart",
  // "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit", "source.organizeImports": "explicit" },
  // "editor.minimap.enabled": false,
  // "workbench.editor.enablePreview": false,
  // -------------------------------------------------------------
  // Observa√ß√£o: mantenha um commit separado quando alternar de modo.
  // =============================================================

  // Extens√µes recomendadas (instalar manualmente):
  // - esbenp.prettier-vscode
  // - dbaeumer.vscode-eslint
  // - usernamehw.errorlens
  // - formulahendry.auto-close-tag
